node{
   stage('SCM Checkout'){
     git 'https://github.com/javahometech/my-app'
   }
stage('Compile-Package'){
     sh 'mvn clean'
     sh 'mvn package'
     }
   stage('Copy war file to webapps'){
     sshagent (['1']){
     sh 'scp -o StrictHostKeyChecking=no target/myweb-0.0.1.war root@localhost:/opt/apache-tomcat-8.5.47/webapps/'
     }
     }
     }
