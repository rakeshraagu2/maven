node{
   stage('SCM Checkout'){
     git 'https://github.com/javahometech/my-app'
   }
stage('Compile-Package'){
     sh 'mvn clean'
     sh 'mvn package'
     }
   stage('Copy war file to webapps'){
     sh 'cp /var/lib/jenkins/workspace/my-app-webapp1/target/myweb-0.0.1.war localhost:/opt/apache-tomcat-8.5.47/webapps/'
     }
     }
